
.param-box{
  position:absolute; 
  bottom:96rpx;
  left:50%;
  padding:0 16rpx 0 32rpx;
  background: #fff;
  transform: translateX(-50%);
  z-index:5;
}
.param-box .param-item{
  position: relative;
  padding-left:66rpx;
  padding-right:74rpx;
  height: 106rpx;
  line-height: 106rpx;
  text-align: left; 
  font-size:28rpx;
  color:#9E938E;
  background-repeat: no-repeat;
  background-size: 48rpx;
  background-position: center left;
}
.param-box .param-item .num{
  padding:0 10rpx;
  color:#FF435B;
}
.param-box .param-item .txt{
  color:#595350;
  padding:0 10rpx;  
}
.param-box .map-item{
  padding-top:20rpx;
  line-height: 40rpx;
}
.param-box .param-item .right{
  position: absolute;
  display: block; 
  top: 40rpx;
  right: 32rpx;
  width:32rpx;
  height: 32rpx;
  background-repeat: no-repeat;
  background-size:100%;
  background-image:url('https://file.niannian99.com/niannianyun/wx/msg/begin/right2.png');
}
.redpacket-box{
  background: none;
  background-repeat: no-repeat;
  height: 184rpx;
  background-size: 188rpx 184rpx;
  background-position: center bottom; 
}
.redpacket-box .param-item{
  top:130rpx;
  padding: 0;
  margin: 0 auto;
  color: #ECD9A8;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.redpacket-box .param-item.red-open{
  margin:0 auto;
  top:0;
  width: 188rpx;
  height: 184rpx;
}

.redpacket-box .param-item button{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background:none;
  border:none !important;

}


/*****************红包打开样式特效*****************/
.redpacket-max-box{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background:rgba(59,54,53,0.8);
}
.redpacket-max-box .star-box{
  position: relative;
  width: 100%;
  height: 100%;
}
.redpacket-max-box .star-box .star{
  position: absolute;
  background-repeat: no-repeat;
  display: block;
}
.redpacket-max-box .cont{
  position: fixed;
  top:358rpx;
  left:50%;
  transform:translateX(-50%);
  width: 504rpx;
  height: 602rpx; 
} 
.redpacket-max-box.open .cont{
  top:161rpx;
  height: 815rpx;
}
.redpacket-max-box.tui .cont{
  height: 620rpx;
}

.redpacket-max-box .cont .cont-info{
  position: relative;
  width: 100%;
  height: 100%; 
}
.cont-info .header{
  position: absolute;
  width:496rpx;
  height:218rpx; 
  background-repeat: no-repeat;
  background-size: 100%;
  z-index: 2;
}

.redpacket-max-box .cont-info .bg{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-size: 504rpx 602rpx;
  background-repeat: no-repeat;
  background-position:center bottom;
  z-index:1;
}
.redpacket-max-box.open .cont-info .bg{ 
  background-size:506rpx 820rpx;
  z-index:3;
}

.cont-info .user-info{
  position: absolute;
   top:301rpx;
   left: 0;
   width: 100%; 
  color: #FFF3BF;
  text-align: center;
  z-index: 4;
}
.redpacket-max-box.open .cont-info .user-info{
  top:348rpx;
}
.cont-info .user-info image{
  margin: 0 auto 19rpx;
  display: block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
}
.cont-info .user-info .name{
  font-size: 36rpx;
  line-height: 50rpx;
}
.cont-info .user-info .desc{
  margin-bottom: 24rpx;
  font-size: 20rpx;
  line-height: 28rpx;
}
.cont-info .user-info .money{
  font-size: 48rpx;
  line-height: 68rpx;
}
.cont-info .user-info .money span{
  padding: 10rpx;
  font-size: 28rpx;
  line-height: 68rpx;
}
.cont-info .time-info{
  position: absolute;
  width: 100%;
  bottom: 19rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #920012;
  text-align: center;
  z-index: 4;
}
.cont-info .time-info text{
  display: block;
}
.redpacket-max-box .cont .btn{
   position: absolute; 
  margin: 0;
  padding: 0; 
  border:none !important;
  background-repeat: no-repeat;
  background-size: 100%;
  z-index:5;
}
.redpacket-max-box .cont .btn-close{
  position: absolute;
  top:-20rpx;
  right: -20rpx;
  margin: 0;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  border:none !important;
  background-repeat: no-repeat;
  background-size: 100%;
  
}
.redpacket-max-box.open .cont .btn-close{
  top:177rpx;
}
.redpacket-max-box .cont  .btn-open{
  top:95rpx;
  left:50%;
  transform: translateX(-50%);
  width: 192rpx;
  height: 192rpx;
}
.redpacket-max-box .cont .cont-info .icon-tui{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 164rpx;
  height: 164rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  z-index:5;
}