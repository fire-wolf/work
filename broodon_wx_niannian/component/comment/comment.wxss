.response-container {
  margin-bottom: 72rpx;
}
.wordsLeave-container {
  position: relative;
  width: 670rpx;
  padding: 40rpx 0;
  margin: 0 auto;
  background-color: #fff;
  word-break: break-all;
  border-bottom:1px solid rgba(237,237,239,1);
}

.user-avatar {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #ccc;
  overflow: hidden;
}
.user-avatar image{
  display: block; 
  width: 100%;
}

.wordsLeave-inner-container {
  position: relative;
  margin-left: 80rpx;
}

.wordsLeave-head-message {
  position: relative;
}

.name-time {
  display: flex;
  height: 64rpx;
  -webkit-align-items: center;
  align-items: center;
  -webkit-align-content: center;
  align-content: center;
}

.name {
  font-size: 28rpx;
  color: rgba(59, 54, 53, 1);
  line-height: 64rpx;
  font-weight: 600;
  /* margin-top: 6rpx;
  margin-bottom: 8rpx; */
}

.good-image {
  position: absolute;
  right: 0;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.leave-content {
  position: relative;
  display: block;
  margin-top: 22rpx;
  font-size: 28rpx;
  color: rgba(59, 54, 53, 1);
  line-height: 44rpx;
} 
.handle-cover{
  position: absolute;
  left: 80rpx;
  top: -140rpx;
  width: 298rpx;
  height: 80rpx;
  color: #fff;
  font-size:28rpx;
  background: rgba(38,39,40,0.8);
  border-radius:16rpx;
} 
.handle-cover .handle-item{
  float: left;
  width: 50%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
}

.handle-cover::before{
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 50%;
  width: 1rpx;
  height: 100%;
  transform: scaleX(0.2);
  background: #fff;
}
.handle-cover::after{
  position: absolute;
  top: 80rpx;
  left: 150rpx;
  content: '';
  display: block;
  border: 15rpx solid transparent;
  border-top: 15rpx solid rgba(38,39,40,0.8);
}

.reply-container {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  background: rgba(245,243,242,1);
}

.reply {
  position: relative;
  margin-bottom: 40rpx;
}
.reply .handle-cover{
  top: -70rpx;
}

.reply:last-child {
  margin-bottom: 0;
}

.reply-head {
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-align-items: center;
  align-items: center;
}

.reply-name {
  font-size: 28rpx;
  color: rgba(59, 54, 53, 1);
  line-height: 28rpx;
  font-weight: bold;
}

.reply-time {
  width: 100rpx;
  font-size: 22rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 20rpx;
  text-align: center;
}

.reply-content {
  display: block;
  font-size: 28rpx;
  color: rgba(89, 83, 80, 1);
  line-height: 40rpx;
  margin-top: 18rpx;
}

.text-font {
  font-size: 28rpx;
  color: rgba(186, 178, 175, 1);
  line-height: 40rpx;
  margin: 0 16rpx;
}

.bottom{
  height: 30rpx;
  margin-top: 24rpx;
}

.bottom .time {
  float: left;
  font-size: 24rpx;
  color: rgba(186, 178, 175, 1);
  line-height: 26rpx;
}

.bottom .read-more {
  float: right;
  display: block;
  /* width: 100%; */
  font-size: 26rpx;
  color: rgba(105, 191, 48, 1);
  line-height: 26rpx;
}

.reply-hr {
  width: 670rpx;
  /* height: 4rpx; */
  border-top: 1rpx solid #EDEAE8;
  margin-top: 40rpx;
}

.comment-bar {
  position: fixed;
  z-index: 100;
  bottom: 0;
  width: 100%;
  height: 86rpx;
  background: #fff;
  border-top: #EDEAE8 solid 1rpx;
}

.comment-bar-wrap .comment-bar-x{
  height: 154rpx;
  padding-bottom: 68rpx;
}

.comment-box {
  width: 670rpx;
  height: 60rpx;
  margin: 14rpx auto 12rpx;
  background: rgba(245, 243, 242, 1);
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
}

.comment-box image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 40rpx;
  margin-top: 6rpx;
}

.comment-box input {
  color: rgba(158, 147, 142, 1);
  width: 584rpx;
  height: 60rpx;
}

.comment-placeholder {
  font-size: 24rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 34rpx;
  margin-left: 6rpx;
}

.input-comment{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  padding: 16rpx 24rpx 24rpx;
  background: #fff; 
  border-top: #EDEAE8 solid 1rpx;
  z-index: 101;
}

.input-comment .textarea{
  display: block;
  width: 702rpx;
  height: 100rpx;
  padding: 15rpx 24rpx;
  box-sizing: border-box;
  background: #F5F3F2;
  border-radius:16rpx;
}

.input-comment .send-btn{
  float: right;
  padding-top: 32rpx;
  padding-right: 8rpx;
  color: #69BF30;
  font-size: 32rpx;
}


.wordsLeave-none{
  padding-top: 160rpx;
  padding-bottom: 280rpx;
}
.wordsLeave-none image{
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}
.wordsLeave-none .words{
  color: rgba(158,147,142,1);
  font-size: 28rpx;
  text-align: center;
}