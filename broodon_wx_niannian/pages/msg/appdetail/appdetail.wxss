/* 我的感悟详情 */
.fed-wrap{
  position: relative;
  min-height: 100%;
  background-image:url(https://file.niannian99.com/niannianyun/wx/topic/letter/bg-envelope-bottom.png);
  background-color: #F1F3F5;
  background-repeat: no-repeat;
  background-position: left bottom;
  background-size: 100%;
}
.fed-wrap .audio{
  position: fixed;
  top: 124rpx;
  right: 48rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  z-index: 10;
  
}
.fed-wrap .audio .icon{
  display: block;
  width: 38rpx;
  height: 38rpx;
}
.rotate{
  -webkit-animation: playRotate 3s linear infinite;
  animation: playRotate 3s linear infinite;
}

@-webkit-keyframes playRotate{
  0% {transform:rotateZ(0deg);}
  25% {transform:rotateZ(90deg);}
  50% {transform:rotateZ(180deg);}
  75% {transform:rotateZ(270deg);}
  100% {transform:rotateZ(360deg);}
}
@keyframes playRotate{
  0% {transform:rotateZ(0deg);}
  25% {transform:rotateZ(90deg);}
  50% {transform:rotateZ(180deg);}
  75% {transform:rotateZ(270deg);}
  100% {transform:rotateZ(360deg);}
}


.fed-main{
  width: 716rpx;
  margin: 23rpx 17rpx 0;
  border:1px solid #DBCFC4; 
  background-color: #F7F6F2;
  background-repeat:  no-repeat, repeat;
  background-position: left bottom, center;
  background-size: 100%,cover;
  border-radius: 8rpx;
  overflow-x:hidden;
  z-index: 3;
}

.fed-main .bg-msg{
  display: block;
  width: 100%;
}
.fed-main .fed-salutation{
  color: #595350;
  font-size: 32rpx;
  font-weight: bold;
  line-height:45rpx;
  height:45rpx;
  padding-left: 31rpx;
}

.fed-main .fed-text{
  width: 101%;
  color: #3B3635;
  font-size: 28rpx;
  line-height:50rpx;
  word-break:break-all;
  min-height: 400rpx;
  padding:17rpx 31rpx 0 31rpx;
}
.fed-main .fed-text .voice{
  position: relative;
  width: 100%;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  color: #BB867C;
  font-size: 28rpx;
  margin-top: 42rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100%;
}
.fed-main .fed-text .voice .handle-icon{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 32rpx;
  top: 24rpx;
}
.fed-main .fed-text .video{
  position: relative;
  width: 100%;
  height: 368rpx;
  margin-top: 42rpx;
  border-radius: 8rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  margin-bottom: 17rpx;
}
.fed-main .fed-text .video .handle-icon{
  position: absolute;
  width: 72rpx;
  height: 72rpx;
  left: 50%;
  top: 50%;
  margin: -36rpx 0 0 -36rpx;
  z-index: 6;
}
.fed-main .fed-text .video  #detailVideo{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 7;
}

.fed-main .fed-text .msg-img{
  display: block;
  width: 100%;
  border-radius:8rpx;
  margin: 42rpx auto 12rpx auto;
}
.fed-main .fed-text image{
  max-width: 100% !important;
}
.fed-main .fed-signature{
  text-align: right;
  height:45rpx; 
  font-size:32rpx;
  color:#595350;
  line-height:45rpx;
  margin: 50rpx 40rpx 4rpx 0;
}
.fed-main .fed-time{
  text-align: right;
  height:33rpx; 
  font-size:24rpx;
  color:#595350;
  line-height:33rpx;
  padding-right: 40rpx;
}

.fed-wrap .fed-bottom-bg2{
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 2;
}
.fed-wrap .fed-bottom-bg2-iphonex{
  padding-bottom:68rpx !important;
}
.fed-wrap .fed-bottom{
  position: fixed;
  width: 100%;
  height: 96rpx;
  bottom: 0;
  left: 0;
  color: #8B572A;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 96rpx;
  text-align: center;
  background: #EFDCC4;
  z-index: 5;
}
.fed-wrap .fed-bottom-iphonex{
  height:164rpx;
  padding-bottom:68rpx !important;
}
.img-introduce{
  display: block;
  width: 100%;
