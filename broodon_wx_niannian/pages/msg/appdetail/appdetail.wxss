}

.btn-app-view{
  position: absolute;
  top: 50%;
  right: 0;
  width: 160rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  font-size:24rpx;
  color: #fff;
  background:rgba(0,0,0,0.2);
  border-radius: 70rpx 0px 0px 70rpx ; 
