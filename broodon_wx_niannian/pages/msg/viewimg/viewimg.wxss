.viewimg{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 90rpx;
  width: 100%;
  /* height:100%; */
  /* min-height: 100%; */
  background: rgba(0, 0 , 0, 0.4);
  overflow-y:scroll;
}
.viewimg .img{
  display: inline-block;
  width: 100%;
  vertical-align: middle;
}
.open{
  display: inline-block;
  height: 100%;
  width: 0;
  vertical-align: middle;
}

.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  background: rgba(0, 0 , 0, 0.7)
}
.foot .change{
  float: left;
  padding-left: 30rpx;
}
.foot .remove{
  float: right;
  padding-right: 30rpx;
}