.editor{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #F1F3F5;
  z-index: 1;
}
.error-tip{
  position: absolute;
  top: 0;
  width: 100%;
  height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  background: #E64340;
  z-index: 4;
}
.main-wrap{
  min-height: 100%;
  background-repeat:  no-repeat, repeat;
  background-position: left bottom, center;
  background-size: 100%,cover;
  border-radius:8rpx;
  z-index:3;
}

.main-wrap .audio{
  position: absolute;
  top: 105rpx;
  right: 32rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  z-index: 10;
}
.main-wrap .audio .icon{
  display: block;
  width: 38rpx;
  height: 38rpx;
}
.rotate{
  -webkit-animation: playRotate 3s linear infinite;
  animation: playRotate 3s linear infinite;
}

@-webkit-keyframes playRotate{
  0% {transform:rotateZ(0deg);}
  25% {transform:rotateZ(90deg);}
  50% {transform:rotateZ(180deg);}
  75% {transform:rotateZ(270deg);}
  100% {transform:rotateZ(360deg);}
}
@keyframes playRotate{
  0% {transform:rotateZ(0deg);}
  25% {transform:rotateZ(90deg);}
  50% {transform:rotateZ(180deg);}
  75% {transform:rotateZ(270deg);}
  100% {transform:rotateZ(360deg);}
}

