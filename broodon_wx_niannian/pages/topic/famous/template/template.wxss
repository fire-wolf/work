.wordsLeave-container {
  padding: 40rpx 40rpx 0 40rpx;
  background-color: #fff;
  position: relative;
}

.user-avatar {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.wordsLeave-inner-container {
  position: relative;
  margin-left: 80rpx;
}

.wordsLeave-head-message {
  position: relative;
}

.name-time {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: rgba(59, 54, 53, 1);
  line-height: 24rpx;
  font-weight: bold;
  margin-top: 6rpx;
  margin-bottom: 8rpx;
}

.time {
  font-size: 20rpx;
  color: rgba(186, 178, 175, 1);
  line-height: 20rpx;
}

.good-image {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
}

.leave-content {
  display: block;
  margin-top: 22rpx;
  font-size: 28rpx;
  color: rgba(59, 54, 53, 1);
  line-height: 44rpx;
}

.reply-container {
  margin-top: 40rpx;
  margin-bottom: 24rpx;
  border-left: 2rpx rgba(237, 234, 232, 1) solid;
}

.reply {
  margin-left: 16rpx;
  margin-bottom: 40rpx;
}

.reply:last-child {
  margin-bottom: 0;
}

.reply-head {
  display: flex;
  justify-content: space-between;
}

.reply-name {
  font-size: 28rpx;
  color: rgba(59, 54, 53, 1);
  line-height: 28rpx;
  font-weight: bold;
}

.reply-time {
  font-size: 22rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 20rpx;
}

.reply-content {
  display: block;
  font-size: 28rpx;
  color: rgba(89, 83, 80, 1);
  line-height: 28rpx;
  margin-top: 16rpx;
}

.text-font {
  font-size: 28rpx;
  color: rgba(186, 178, 175, 1);
  line-height: 28rpx;
  margin: 0 16rpx;
}

.read-more {
  text-align: right;
  display: block;
  width: 100%;
  font-size: 28rpx;
  color: rgba(105, 191, 48, 1);
  line-height: 28rpx;
}

.reply-hr {
  width: 670rpx;
  /* height: 4rpx; */
  border-top: 1rpx solid #EDEAE8;
  margin-top: 40rpx;
}

.comment-bar-wrap{
  /* position: fixed;
  z-index: 100;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%; */
}

.comment-bar {
  position: fixed;
  z-index: 100;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 86rpx;
  background: #fff; 
  border-top: #EDEAE8 solid 1rpx;
}

.comment-box {
  width: 670rpx;
  height: 60rpx;
  margin: 14rpx auto 12rpx;
  background: rgba(245, 243, 242, 1);
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
}

.comment-box image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 40rpx;
  margin-top: 6rpx;
}

.comment-box input {
  width: 584rpx;
  height: 60rpx;
}

.comment-placeholder {
  font-size: 24rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 34rpx;
  margin-left: 6rpx;
}

.input-comment{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  padding: 16rpx 24rpx 24rpx;
  background: #fff; 
  border-top: #EDEAE8 solid 1rpx;
  z-index: 101;
}

.input-comment textarea{
  display: block;
  width: 702rpx;
  height: 180rpx;
  padding: 15rpx 24rpx;
  box-sizing: border-box;
  background: #F5F3F2;
  border-radius:16rpx;
}

.input-comment .send-btn{
  float: right;
  padding-top: 32rpx;
  padding-right: 8rpx;
  color: #69BF30;
  font-size: 32rpx;
}