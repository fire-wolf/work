page{
  background: #fff;
}
.main-container{
  padding-bottom: 140rpx;
}
.comment-main-x{
  padding-bottom: 208rpx;
}
.comment-main{
  padding: 40rpx;
  background: #fff;
  word-break: break-all;
}
.main-container .header{
  height: 64rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}
.main-container .header .image-wrapper{
  display: block;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
}
.main-container .header .image-wrapper image{
  display: block;
  width: 64rpx;
  height: 64rpx;
  background: #ccc;
}
.main-container .header .user-name{
  flex: 1;
  padding-left: 16rpx;
  font-weight:600;
  color:rgba(59,54,53,1);
  font-size: 28rpx;
}
.main-container .header .user-name .reply{
  margin: 0 16rpx;
  font-weight:400;
  color:rgba(186,178,175,1);
}
.main-container .header .like-image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.main-container .comment-content{
  padding-left: 80rpx;
  font-size: 28rpx;
  font-weight:400;
  color:rgba(59,54,53,1);
  line-height:44rpx;
}

.main-container .main-bottom{
  height: 50rpx;
  padding: 16rpx 0 0 80rpx;
  font-size: 24rpx;
  color:rgba(186,178,175,1);
}
.main-bottom .left{
  float: left;
}
.main-bottom .right{
  float: right;
}

.space{
  width:100%;
  height:16rpx;
  background:rgba(245,243,242,1);
}

.empty{
  padding-top: 200rpx;
}
.empty image{
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}
.empty .words{
  color: rgba(158,147,142,1);
  font-size: 28rpx;
  text-align: center;
}


.comment-list{
  padding: 0 40rpx;
}
.comment-list .comment-item{
  padding: 24rpx 0 20rpx 0;
  border-bottom:1rpx solid rgba(237,234,232,1); 
  word-break: break-all;
}


.comment-bar {
  position: fixed;
  z-index: 100;
  bottom: 0;
  width: 100%;
  height: 86rpx;
  background: #fff;
  border-top: #EDEAE8 solid 1rpx;
}

.comment-bar-wrap .comment-bar-x{
  height: 154rpx;
  padding-bottom: 68rpx;
}

.comment-box {
  width: 670rpx;
  height: 60rpx;
  margin: 14rpx auto 12rpx;
  background: rgba(245, 243, 242, 1);
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
}

.comment-box image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 40rpx;
  margin-top: 6rpx;
}

.comment-box input {
  width: 584rpx;
  height: 60rpx;
}

.comment-placeholder {
  font-size: 24rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 34rpx;
  margin-left: 6rpx;
}

.input-comment{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  padding: 16rpx 24rpx 24rpx;
  background: #fff; 
  border-top: #EDEAE8 solid 1rpx;
  z-index: 101;
}

.input-comment .textarea{
  display: block;
  width: 702rpx;
  height: 100rpx;
  padding: 15rpx 24rpx;
  box-sizing: border-box;
  background: #F5F3F2;
  border-radius:16rpx;
}

.input-comment .send-btn{
  float: right;
  padding-top: 32rpx;
  padding-right: 8rpx;
  color: #69BF30;
  font-size: 32rpx;
}