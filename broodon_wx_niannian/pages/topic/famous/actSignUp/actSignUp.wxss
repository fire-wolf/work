@import "../../../../wxParse/wxParse.wxss";
page {
  background-color: #fff;
}

.detail-container {
  position: relative;
  display: flex;
  height: 100%;
  flex-direction: column;
}

.header-contain {
  position: relative; 
  margin: 0 auto; 
  height: 348rpx;
  overflow: hidden; 
}
.header-cont{
  position:relative;
  top:0;
  left:0; 
  height:100%;
  z-index:2;
  background:#fff;
  padding:24rpx 0 48rpx 32rpx;
}

.header-contain .act-img{
  float: left;
  position: relative;
  width: 204rpx;
  height: 276rpx;
  border-radius: 8rpx;
}
.header-contain .act-img  image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.header-contain .act-img span{
  position: absolute;
  top:0;
  left:0;
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  padding:0 8rpx;
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 8rpx 0 8rpx 0;
  background: rgba(0,0,0,0.7);
}
.header-contain .act-cont{
  float: left; 
  margin-left: 24rpx;
  width:456rpx;
}
.header-contain .act-cont .title{
  margin-bottom:24rpx;
  font-size: 36rpx;
  line-height: 48rpx;
  text-align: left;
  color: #3A3B3A ; 
}
.header-contain .act-cont .time,.header-contain .act-cont .addr {
  margin-bottom: 16rpx; 
  font-size: 24rpx;
  line-height: 26rpx;
  color: #707371;
  text-align: left;
}
 
 
.content-contain{
  padding-bottom: 140rpx;
}
.content-contain .signup-box{
  margin-top: 12rpx;
  padding-left:32rpx;

}
.content-contain .signup-box .title{   
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  color: #B3B9B5;
}
.content-contain .signup-box .title span{
  display: inline-block;
  margin-right: 16rpx;
  width: 24rpx;
  height: 24rpx;
  background: #57C37D;
  border-radius: 100%;
}
.content-contain .signup-box .form-item{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #707371;
  border-bottom: 2rpx solid #ddd;
}
.content-contain .signup-box .form-item label,.content-contain .signup-box .form-item input{
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  vertical-align: middle;
}
.content-contain .signup-box .form-item label{
  width:156rpx;
}
.content-contain .signup-box .form-item input{
  width: 500rpx;
  color: #171312;
}

button.btn-signup{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  height: 100rpx;
  border:none !important;
  text-align: center;
  color: #fff !important;
  border-radius: 0;
  margin: 0;
  /* background:linear-gradient(90deg,rgba(122,221,94,1),rgba(79,202,124,1)); */
  background:rgba(122,221,94,1);
  z-index: 9;
}
button.btn-signup[disabled]{
  background: #E3EAE6;
  color:#B3B9B5 !important;
}
 
