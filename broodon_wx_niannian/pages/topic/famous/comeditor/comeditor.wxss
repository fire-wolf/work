button.btn-subComm{
  position:fixed;
  top:38rpx;
  right:32rpx;
  margin:0;
  padding:0;
  width:94rpx;
  height:50rpx;
  font-size:24rpx;
  line-height:50rpx;
  border-radius:12rpx;
  text-align:center;
  color:#69BF30;
  background-color:#fff;
  border-color:#69BF30;
  border-width:2rpx;
}
button.btn-subComm[disabled]{
  color: #C3E8AB;
  border-color:#C3E8AB;
  background-color:#fff;
}
.txt-input{
  display:block;
  width: 100%;
  height: 100%;
  font-size:28rpx;
  line-height: 40rpx;
}
.comment-list{
  padding-top:34rpx;
}
.comment-box{
  position: relative;
  margin:0 40rpx 32rpx;
  padding:16rpx 24rpx;
  border-radius: 12rpx;
  border:2rpx solid #ECE5E3;
  background: #fff;
  overflow: hidden;
}
.comment-box .title{
  padding-bottom: 8rpx;
  margin-bottom:12rpx;
  font-size:32rpx;
  line-height: 44rpx;
  border-bottom: 1rpx solid #ECE5E3;
}
.comment-box .title button{
  position: absolute;
  right: 0;
  top:0;
  color: #FA5252;
  border:none;
  font-size: 28rpx;
  line-height: 40rpx;
}