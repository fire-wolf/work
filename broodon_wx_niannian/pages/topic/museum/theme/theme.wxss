
.theme-list{
  padding-bottom: 18rpx;
  background: #fff;
}
.theme-list .theme-item{
  position: relative;
  width: 100%;
  height: 300rpx;
  padding-top: 80rpx;
  margin-bottom: 16rpx;
  background-repeat: no-repeat;
  background-size: cover;
  /* background:linear-gradient(90deg,rgba(187,114,93,1) 0%,rgba(161,85,68,1) 100%); */
}
.theme-list .theme-item .theme-item-title{
  width: 548rpx;
  height: 66rpx;
  text-align: center;
  color: #fff;
  font-size: 48rpx;
  font-weight: 700;
  line-height:66rpx;
  text-shadow:0 1rpx 2rpx rgba(59,54,53,0.2);
}
.theme-list .theme-item .theme-item-data{
  width: 548rpx;
  height: 34rpx;
  margin-top: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height:34rpx;
  text-shadow:0px 1rpx 2rpx rgba(59,54,53,0.2);
}
.theme-list .theme-item .theme-item-image{
  position: absolute;
  width: 252rpx;
  bottom: 0;
  right: 0;
}