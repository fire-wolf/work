/* 我的感悟详情 */
.msg-wrap{
  position: relative;
  min-height: 100%;
  background:-webkit-linear-gradient(180deg,rgba(218,72,72,1),rgba(180,50,50,1));
  background:linear-gradient(180deg,rgba(218,72,72,1),rgba(180,50,50,1));
}

.msg-main{
  width: 716rpx;
  min-height: 1130rpx;
  margin: 23rpx 17rpx 0;
  background-color: #fff; 
  border-radius:8rpx;
  z-index: 3; 
}
 

.bg-msg-bottom{ 
  width: 100%;
  bottom: 90rpx;
}
.msg-main .bg-msg{
  display: block;
  width: 100%;
}
.cont-img{
  display: block;
  width: 86%;
  margin: 0 auto;
}
.msg-main .msg-title,.msg-main .msg-subtitle{
  color: #3B3635;
  font-size: 46rpx;
  line-height:73rpx;
  height:73rpx;
  text-align: center;
}
.msg-main .msg-subtitle{
  font-size: 28rpx;
  color:#9E938E;
}
.msg-main .image{
  display: block;
  margin: 34rpx auto 60rpx;
  width: 654rpx;
  height: 490rpx;
  border-radius: 6rpx;
} 
.msg-main .msg-text{
  color: #595350;
  font-size: 28rpx;
  line-height:50rpx;
  text-align:left;
  min-height: 400rpx;
  padding:0 32rpx 20rpx 32rpx;
}
.msg-main .msg-signature{
  text-align: right; 
  font-size:28rpx;
  color:#595350;
  line-height:50rpx;
  margin: 0 32rpx 0 32rpx;
}
.msg-main .msg-time{
  text-align: right;
  height:33rpx; 
  font-size:24rpx;
  color:#595350;
  line-height:33rpx;
  padding-right: 40rpx;
}
.msg-main .info{
  padding-top:20rpx;
  margin: 80rpx 32rpx 0;
  border-top:1rpx solid #F2E8D7;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #105085;
}

.msg-wrap .msg-bottom-bg2{
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 2;
}
.msg-wrap .msg-bottom-bg2-iphonex{ 
  bottom: 82rpx;
}

.msg-wrap .msg-bottom{
  position: fixed;
  width: 100%;
  height: 94rpx;
  bottom: 0;
  left: 0;
  color: #FED892;
  font-size: 32rpx;
  padding-top: 27rpx;
  background: #EFDCC4;
  z-index: 5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-weight: normal;
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
}
.msg-wrap .msg-bottom-2{
  position: fixed;
  width: 100%;
  height: 94rpx;
  bottom: 0;
  left: 0;
  z-index: 3;
}
.msg-wrap .msg-bottom .btn{
  position: relative;
  width: 30%;
  height: 40rpx;
  line-height: 40rpx;
  color: #C40002;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
  border-right: 1rpx solid #C40002;
  background-repeat: no-repeat;
  background-position: 26rpx center;
  background-size: 24rpx;
}
.msg-wrap .msg-bottom .btn.btn-3{
  position: relative;
  width: 40%;
  padding: 0 53rpx;
  text-align: right; 
  border: 0;
}
.msg-wrap .msg-bottom .btn-3 .icon{
  position: absolute;
  display: block;
  width: 60rpx;
  height: 56rpx;
  top: -10rpx;
  left: 46rpx;
}
.msg-wrap .msg-bottom .more{
  position: absolute;
  width: 196rpx;
  height: 162rpx;
  left: 20rpx;
  padding: 0 18rpx;
  background: url('//file.niannian99.com/niannianyun/wx/topic/red/1.5/bg-kuang.png') no-repeat center;
  background-size: cover;
}
.rotate1{
  top: 200rpx; 
  -webkit-animation: playRotate1 0.2s linear;
  animation: playRotate1 0.2s linear;
}
.rotate2{
  top: -180rpx; 
  -webkit-animation: playRotate2 0.2s linear;
  animation: playRotate2 0.2s linear;
}

@-webkit-keyframes playRotate2{
  0% {top:200rpx;}
  100% {top:-180rpx;}
}
@keyframes playRotate2{
  0% {top:200rpx;}
  100% {top:-180rpx;}
}
@-webkit-keyframes playRotate1{
  0% {top:-180rpx;}
  100% {top:200rpx;display: none;}
  
}
@keyframes playRotate1{
  0% {top:-180rpx;}
  100% {top:200rpx;display: none;}
}


.msg-wrap .msg-bottom .more::after{
  display: none;
  content: '';
  position: absolute;
  bottom: -40rpx;
  left: 78rpx;
  width: 0;
  height: 0;
  border: 20rpx solid transparent;
  border-top-color: #EFDCC4;
}
.msg-wrap .msg-bottom .more .more-btn{
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  color: #C40002;
  font-size: 28rpx;
}
.msg-wrap .msg-bottom .more .more-btn-1{
  border-bottom:1px solid rgba(196,0,2,0.2);
}
.msg-wrap .msg-bottom-iphonex{
  height: 178rpx;
  padding-bottom: 82rpx;
}
.msg-wrap .msg-bottom .icon-share-wrap{
  position: absolute;
  right:64rpx;
  top:18rpx;
  width: 316rpx;
  height: 70rpx;
  color: #FED892;
  font-size: 32rpx;
  text-align: right;
  line-height: 66rpx;
  background-repeat: no-repeat;
  background-position: -8rpx -5rpx;
  background-size: 332rpx 82rpx;
  z-index: 3;
}
.msg-wrap .msg-bottom .bg-deliver{
  display: block;
  position: absolute;
  top: 7rpx;
  right: 10rpx;
  width: 316rpx;
  height: 86rpx;
  z-index: 1;
}
.msg-wrap .msg-bottom .icon-share{
  display: none;
  left: 0;
  width: 100%;
  height: 60rpx;
  margin-left: 20rpx;
}


.btn-edit{
  position: fixed;
  top: 50rpx;
  right: 50rpx;
  z-index: 10;
}