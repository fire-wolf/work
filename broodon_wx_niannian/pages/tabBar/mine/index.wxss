page{
  background-color: #F7F7F7;
}
.my-cont .user-info {
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  padding: 48rpx 0 60rpx 32rpx;
  display: flex;
  flex-direction: row;
}

.my-cont .user-info .user-image {
  width: 136rpx;
  height: 136rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  margin-right: 40rpx;
}

.my-cont .user-info .user-name {
  color: rgba(89, 83, 80, 1);
  font-size: 48rpx;
  font-weight: 600;
  margin-top: 21rpx;
}

.my-cont .go-app {
  height: 33rpx;
  font-size: 24rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 33rpx;
}

.my-cont .go-app .icon-right {
  display: block;
  position: absolute;
  width: 14rpx;
  height: 24rpx;
  top: 10.5rpx;
  right: 148rpx;
  z-index: 1;
}

.msg-type {
}

.msg-type .msg-type-item {
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  text-align: center;
  border-bottom: 1rpx solid #ddd;
}

/* 信件列表 */

.my-cont .letter-list {
  margin-top: 16rpx;
  padding: 0 32rpx;
  background: #fff;
}

.my-cont .letter-list .list-item {
  position: relative;
  width: 100%;
  height: 112rpx;
  text-indent: 48rpx;
  color: #4d4d4d;
  font-size: 34rpx;
  line-height: 112rpx;
  border-bottom: 1rpx solid #ebebeb;
  background-repeat: no-repeat;
  background-position: 655rpx center;
  background-size: 15rpx 25.7rpx;
}

.my-cont .letter-list .list-item button {
  position: absolute;
  margin: 0;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: transparent;
  border: none !important;
}

.my-cont .letter-list .list-item image {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-top: 38rpx;
}

.my-cont .letter-list .list-item .dian {
  position: absolute;
  top: 56rpx;
  right: 52rpx;
  width: 14rpx;
  height: 14rpx;
  background: #f04f62;
  border-radius: 50%;
}

.my-cont .letter-list .list-item .btn-ustomer {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  opacity: 0;
}

.identification {
  width: 750rpx;
  margin-left: -32rpx;
  height: 88rpx;
  background: rgba(255, 235, 163, 1);
  padding-left: 34rpx;
  display: flex;
  flex-direction: row;
}

.identification image {
  width: 40rpx;
  height: 40rpx;
  margin:24rpx 17rpx 0 0;
}

.identification .tip {
  font-size: 28rpx;
  color: rgba(230, 174, 80, 1);
  letter-spacing: 1rpx;
  line-height: 88rpx;
}
.identification button{
  margin:0;
  font-size: 28rpx;
  color: rgba(230, 174, 80, 1);
  line-height: 88rpx;
  text-decoration: underline;
  border: none;
  padding: 0;
  letter-spacing: 1rpx;
  margin-right: 2rpx;
}
