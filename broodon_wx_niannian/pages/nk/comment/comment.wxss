button.btn-subComm{
  position:fixed;
  top:38rpx;
  right:32rpx;
  margin:0;
  padding:0;
  width:94rpx;
  height:50rpx;
  font-size:24rpx;
  line-height:50rpx;
  border-radius:12rpx;
  text-align:center;
  color:#69BF30;
  background-color:#fff;
  border-color:#69BF30;
  border-width:2rpx;
}
button.btn-subComm[disabled]{
  color: #C3E8AB;
  border-color:#C3E8AB;
  background-color:#fff;
}
.txt-input{
  display:block;
  width: 100%;
  height: 100%;
  font-size:28rpx;
  line-height: 40rpx;
}
.comment-list{
  padding-top:34rpx;
}
.comment-box{
  position: relative;
  margin:0 40rpx 32rpx;
  padding:16rpx 24rpx;
  border-radius: 12rpx;
  border:2rpx solid #ECE5E3;
  background: #fff;
  overflow: hidden;
}
.comment-box .title{
  padding-bottom: 8rpx;
  margin-bottom:12rpx;
  font-size:32rpx;
  line-height: 44rpx;
  border-bottom: 1rpx solid #ECE5E3;
}
.comment-box .title button{
  position: absolute;
  right: 0;
  top:0;
  color: #FA5252;
  border:none;
  font-size: 28rpx;
  line-height: 40rpx;
}


.modal-wrap{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  background:rgba(0,0,0,0.4);
}
.modal-wrap .modal-main{
  width:560rpx;
  height:270rpx;
  margin: 414rpx auto 0;
  background:#fff;
  border-radius:8rpx;
  color: #000000;
  font-size:32rpx;
}
.modal-wrap .modal-main .title{
  height: 170rpx;
  text-align: center;
  padding-top: 50rpx;
  font-weight: 700;
  font-size: 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.modal-wrap .modal-main .btn-list{

}
.modal-wrap .modal-main .btn-list .btn{
  float: left;
  width: 50%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #02BB00;
  font-size:36rpx;
}