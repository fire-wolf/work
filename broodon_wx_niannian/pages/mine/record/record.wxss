page {
  background-color: #f7f7f7;
}

.calendar {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 32rpx;
  top: 36rpx;
  z-index: 5;
}

.month-info {
  width: 100%;
  height: 112rpx;
  background: #f5f1ec;
  padding: 20rpx 0 0 32rpx;
}

.month-info .month {
  font-size: 32rpx;
  color: rgba(124, 95, 58, 1);
}

.month-info .money-change {
  font-size: 24rpx;
  color: rgba(174, 144, 131, 1);
}

.record-info {
  display: flex;
  flex-direction: row;
  padding: 31rpx 32rpx 31rpx 32rpx;
  position: relative;
  background-color: #fff;
}

.record-info image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  display: block;
}

.record-info .record .type {
  font-size: 32rpx;
  color: rgba(89, 83, 80, 1);
}

.record-info .record .time {
  font-size: 24rpx;
  color: rgba(186, 179, 175, 1);
}

.record-info .money {
  position: absolute;
  right: 32rpx;
  top: 37rpx;
  font-size: 48rpx;
  font-weight: 600;
  color: rgba(89, 83, 80, 1);
}
.record-info .money.withdraw{
  top:25rpx;
}
.record-info .money-status{
  position: absolute;
  right: 32rpx;
  bottom: 10rpx;
  color:#FB9D44;
  font-size:28rpx;
}
.record-info .money-status.ok{
  color: #C3DE90;
}
.calendar-selector {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  width: 100%;
  animation: show 0.3s;
  z-index: 3;
}

@keyframes show {
  from {
    bottom: -600rpx;
  }

  to {
    bottom: 0;
  }
}

.calendar-selector .operation {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 1rpx solid #ebebeb;
}

.calendar-selector .operation .cancel {
  color: #adabab;
  font-size: 32rpx;
}

.calendar-selector .operation .confirm {
  color: #24b123;
  font-size: 32rpx;
}

.background {
  width: 100%;
  height: 1206rpx;
  background: rgba(0, 0, 0, 1);
  opacity: 0.1;
  z-index: 2;
  position: absolute;
  top: 0;
}

.no-record {
  background: #fff;
  width: 100%;
  height: 100%;
  padding-top: 171rpx;
}

.no-record image {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 5rpx;
  display: block;
}

.no-record .none {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: rgba(158, 147, 142, 1);
}
.loading {
  background: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  padding-left: 250rpx;
}

.loading-image {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin: 10rpx 10rpx 0 0;
}