page {
  background-color: #fff;
}

.contain {
  padding-left: 32rpx;
  height: 100%;
}

.contain .list-item {
  width: 100%;
  height: 312rpx;
  padding: 32rpx 32rpx 32rpx 0;
  display: flex;
  flex-direction: row;
  position: relative;
  border-bottom: 1rpx solid rgba(221, 221, 221, 0.589);
}

.contain .list-item .activity-type {
  position: absolute;
  top: 32rpx;
  left: 0rpx;
  width: 96rpx;
  height: 38rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 38rpx;
  text-align: center;
  background-color: #000;
  opacity: 0.5;
  border-radius: 8rpx;
}

.contain .list-item .activity-img {
  width: 184rpx;
  height: 248rpx;
  border-radius: 8rpx;
}

.contain .list-item .right-side {
  margin-left: 24rpx;
}

.contain .list-item .right-side .topic {
  width: 478rpx;
  font-size: 33rpx;
  font-weight: 600;
  color: rgba(23, 19, 18, 1);
}

.contain .list-item .right-side .tip {
  height: 26rpx;
  margin-bottom: 14rpx;
}

.contain .list-item .right-side .tip image {
  width: 20rpx;
  height: 20rpx;
  margin-bottom: 10rpx;
}

.contain .list-item .right-side .tip .detail {
  width: 450rpx;
  font-size: 24rpx;
  float: right;
  color:rgba(112,115,113,1);
  margin-left: 8rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}

.contain .list-item .right-side .state {
  position: absolute;
  bottom: 30rpx;
  /* display: flex;
  flex-direction: row;
  justify-content: space-between; */
  padding-left: 28rpx;
  width: 478rpx;
}

.contain .list-item .right-side .state .sign-in {
  background: linear-gradient(90deg, rgba(122, 221, 94, 1) 0%, rgba(79, 202, 124, 1) 100%);
  position: absolute;
  width: 160rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: rgba(245, 246, 247, 1);
  line-height: 48rpx;
  text-align: center;
  border-radius: 5rpx;
}
.contain .list-item .right-side .state .sign-out{
  background: linear-gradient(90deg, #fc7854 0%, #fa563c 100%);
}
.contain .list-item .right-side .state .sign-detail{
  position: absolute;
  bottom:0;
  width: 160rpx;
  height: 48rpx;
  font-size: 24rpx;
  color:rgba(112,115,113,1);
  line-height: 46rpx;
  text-align: center;
  border-radius: 5rpx;
  border:1rpx solid rgba(221, 221, 221, 0.589);
}
.contain .list-item .right-side .state .action {
  font-size: 24rpx;
  line-height: 48rpx;
  color: rgba(103, 174, 41, 1);
  float: left;
}

.contain .list-item .right-side .state .activity-state {
  font-size: 24rpx;
  line-height: 48rpx;
  color: rgba(179, 185, 181, 1);
  float: right;
}
.contain .loading {
  background: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  padding-left: 250rpx;
}

.contain .loading-image {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin: 10rpx 10rpx 0 0;
}
.no-record-list{
  padding-top:84rpx;
  padding-bottom:210rpx;
}
.no-record-list image{
  margin:0 auto;
  width: 176rpx;
  height: 176rpx;
  display: block;
}

.no-record-list .desc{
  margin-top:74rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #B3B9B5;
  text-align: center;
}