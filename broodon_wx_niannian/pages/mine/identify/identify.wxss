page{
  background-color: #F7F7F7;
}
.item {
  width: 100%;
  height: 112rpx;
  padding-left: 32rpx;
  background-color: #fff;
}

.item .name {
  position: relative;
  border-bottom: solid 1rpx rgba(227, 234, 230, 1);
  height: 112rpx;
  padding: 33rpx 32rpx 0 0;
}

.item .name text {
  width: 64rpx;
  height: 45rpx;
  font-size: 32rpx;
  color: rgba(89, 83, 80, 1);
  line-height: 45rpx;
}

.item .name input {
  width: 550rpx;
  position: absolute;
  top: 33rpx;
  left: 140rpx;
  text-align: right;
}

.item .name input .tip {
  text-align: right;
  color: rgba(214, 208, 206, 1);
  font-size: 32rpx;
}

.notice {
  margin: 16rpx 0 0 34rpx;
  display: flex;
  flex-direction: row;
}

.notice .notice-img {
  width: 28rpx;
  height: 28rpx;
  margin: 7rpx 8rpx 0 0;
}

.notice text {
  height: 40rpx;
  font-size: 28rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 40rpx;
}

.foot {
  position: fixed;
  bottom: 0;
  margin: 0 auto;
  width: 100%;
}

.foot .declare {
  width: 504rpx;
  height: 66rpx;
  font-size: 24rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 33rpx;
  margin: 0 auto;
}

.foot .confirm {
  margin-top: 12rpx;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(90deg, rgba(122, 221, 94, 1) 0%, rgba(79, 202, 124, 1) 100%);
  text-align: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
}

.item .name .person-msg {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item .name .person-msg .left-msg {
  width: 160rpx;
}

.item .name .person-msg .right-msg {
  width: auto;
  color: rgba(158, 147, 142, 1);
}

.pass {
  padding: 40rpx 0;
  background: #fff;
}

.pass image {
  width: 191rpx;
  height: 191rpx;
  margin: 0 auto;
  display: block;
  margin-bottom: 33rpx;
}

.pass .pass-font {
  text-align: center;
  font-size: 28rpx;
  color: rgba(89, 83, 80, 1);
}
