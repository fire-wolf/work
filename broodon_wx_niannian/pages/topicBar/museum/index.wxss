.toall {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.red {
  width: 10rpx;
  height: 32rpx;
  background: rgba(165, 49, 32, 1);
}

.toall-title {
  width: 160rpx;
  height: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(59, 54, 53, 1);
  line-height: 32rpx;
  margin-left: 16rpx;
}

.toall-btn {
  width: 96rpx;
  height: 32rpx;
  font-size: 24rpx;
  color: rgba(187, 114, 93, 1);
  line-height: 32rpx;
  vertical-align: middle;
}

.topics {
  white-space: nowrap;
  margin: 4rpx 0;
}

.topic {
  background-repeat: no-repeat;
  background-size: 100%;
  width: 332rpx;
  height: 130rpx;
  display: inline-block;
  margin-right: 16rpx;
  padding: 16rpx 0 16rpx 24rpx;
  border-radius: 15rpx;
}
.topic:first-of-type{
  margin-left:32rpx;
}
.topic-name {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0rpx 1rpx 2rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 30rpx;
}

.topic-like {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0rpx 1rpx 2rpx rgba(0, 0, 0, 0.2);
}


.letter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  padding: 16rpx 16rpx 16rpx 32rpx;
  height: 216rpx;
  width: 100%;
  /* box-shadow: 0rpx 1rpx 0rpx 0rpx rgb(212, 210, 208); */
}
.style1 {
  border-top: solid 8rpx #dad8d7;
}
.style2 {
  box-shadow: 0rpx 1rpx 0rpx 0rpx rgb(212, 210, 208);
}
.letter-title {
  font-size: 32rpx;
  color: rgba(59, 54, 53, 1);
  margin-bottom: 8rpx;
  font-weight: bold;
  height: 44rpx;
  line-height: 44rpx;
}
.letter-msg {
  font-size: 28rpx;
  color: rgba(89, 83, 80, 1);
  height: 86rpx;
}
.omit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.letter-label {
  font-size: 20rpx;
  color: rgba(187, 114, 93, 1);
  margin-top: 10rpx;
  height: 20rpx;
  line-height: 20rpx;
}
.letter-image {
  width: 184rpx;
  height: 184rpx;
  border-radius: 4px;
  overflow: hidden;
}