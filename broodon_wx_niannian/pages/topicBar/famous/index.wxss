page {
  background-color: #fff;
}

.famous-container {
  display: flex;
  flex-direction: column;
  padding-bottom: 50rpx;
}

.head-container {
  display: flex;
  flex-direction: row;
}

.search-bar {
  width: 670rpx;
  height: 72rpx;
  background: rgba(241, 241, 242, 1);
  border-radius: 20rpx;
  margin: 17rpx 40rpx 0;
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
}

.placeholder {
  font-size: 28rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 28rpx;
}

.search {
  margin: auto 0;
  height: 42rpx;
  margin-left: 14rpx;
}

.cancel {
  font-size: 34rpx;
  color: rgba(105, 191, 48, 1);
  line-height: 48rpx;
  margin-top: 26rpx;
}

.hot {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(59, 54, 53, 1);
  line-height: 40rpx;
  margin-left: 32rpx;
  margin-top: 32rpx;
}

.inner-container {
  display: flex;
  flex-direction: row;
  /* width: 91.4%; */
  margin: 0 auto;
  padding: 32rpx 32rpx 28rpx 32rpx;
  border-bottom: 1rpx solid #EDEAE8;
}

.famous-image {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  border-radius: 8rpx;
  background: #ffffff;
  overflow: hidden;
}

.famous-image image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
}

.name-intro {
  /* display: flex;
  flex-direction: column; */
  margin: 24rpx 0rpx 0rpx 24rpx;
}

.name {
  width: 462rpx;
  height: 48rpx;
  font-size: 36rpx;
  color: rgba(0, 0, 0, 1);
  line-height: 48rpx;
  font-weight: bold;
}

.intro {
  display: block;
  width: 430rpx;
  height: 72rpx;
  font-size: 26rpx;
  color: #000000;
  line-height: 36rpx;
  margin-top: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.hr {
  width: 686rpx;
  height: 4rpx;
  border-top: 1rpx solid rgba(237, 234, 232, 1);
  margin: 24rpx 32rpx 0 32rpx;
}

.focus-container {
  margin-top: 56rpx;
  margin-left: 32rpx;
}

.focus-hot {
  font-size: 28rpx;
  color: rgba(158, 147, 142, 1);
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.search-result {
  padding-top: 18rpx;
}

.search-result image {
  border-radius: 90rpx;
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}

.search-result text {
  font-size: 32rpx;
  color: rgba(59, 54, 53, 1);
  vertical-align: middle;
}

.empty-container {
  margin-top: 184rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.empty-container image {
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}

.empty-container text {
  font-size: 28rpx;
  color: rgba(186, 179, 175, 1);
  line-height: 40rpx;
}
