page {
  background: rgba(245, 243, 242, 1);
}

.offense-container {
  display: flex;
  flex-direction: column;
}

.font-text {
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(158, 147, 142, 1);
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.reason {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 96rpx;
  background: rgba(255, 255, 255, 1);
  padding: 26rpx 35rpx 0 30rpx;
  border-bottom: 1rpx solid #FFF5F3;
}

.reason text {
  font-weight: 400;
  color: rgba(59, 54, 53, 1);
  vertical-align: middle;
}

.reason image {
  width: 27rpx;
  height: 21rpx;
  vertical-align: middle;
}

.btn-submit {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  background: rgba(105, 191, 48, 1);
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 20rpx;
  padding-top: 22rpx;
}

.textarea-wrapper{
  padding-top: 20rpx;
}
.textarea-wrapper textarea{
  display: block;
  width: 92%;
  height: 200rpx;
  padding: 10rpx 20rpx;
  margin: 0 auto;
  color: rgba(59, 54, 53, 1);
  background: #fff;
  border-radius: 20rpx;
}