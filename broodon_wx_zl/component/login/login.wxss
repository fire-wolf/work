.login-wrap{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 130rpx 40rpx 0;
  z-index: 101;
  background: #F1F3F5;
}
.form{
  width: 590rpx;
  margin: 0 auto;
}
.form .form-item{
  position: relative;
  height: 100rpx;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #CED4DA;
}
.form .form-item.borderColor{
  border-bottom: 1rpx solid #329AF0;
}
.form .form-item input{
  height: 100%;
  font-size:32rpx;
  color:#212529;
  line-height:44rpx;
}
.form .form-item .get-code{
  position: absolute;
  right: 0;
  top: 0;
  height: 100rpx;
  line-height: 100rpx;
  color: #329AF0;
  font-size:32rpx;
  z-index: 10;
}
.btn-login{
  width: 100%;
  height: 94rpx;
  margin-top: 80rpx;
  font-size:36rpx;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  background: #329AF0;
  border-radius:10rpx;
}
.btn-login.disbale{
  opacity: 0.6;
}

.error-tip{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  background: #E64340;
  z-index: 4;
}
.icon-close{
  display: block;
  position: fixed;
  top: 0;
  right: 20rpx;
  width: 70rpx;
  height: 70rpx;
}