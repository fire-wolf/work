/**app.wxss**/
view{
  box-sizing: border-box;
} 
page {
  font-size: 32rpx;
}
checkbox, radio{
  margin-right: 10rpx;
}
form{
  width: 100%;
}

/* lib */
.strong{
  font-weight: bold;
}
.tc{
  text-align: center;
}

/* page */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between; 
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.page-item{
  position: relative;
  width: 670rpx;
  height: 290rpx;
  padding: 40rpx;
  margin: 0 auto 40rpx;
  /* background:linear-gradient(-90deg,rgba(45,198,173,1),rgba(58,202,117,1));
  box-shadow:0px 8px 14px -10px rgba(82,140,236,0.8); */
  border-radius:24rpx;
}
.page-item .title{
  font-size: 40rpx;
  color: #fff;
  line-height: 40rpx;
}
.page-item .icon-car{
  position: absolute;
  display: block;
  width: 144rpx;
  height: 144rpx;
  top: 52rpx;
  right: 40rpx;
}
.page-item .price,.page-item .count{
  position: absolute;
  bottom: 40rpx;
  font-size:28rpx;
  color:#fff;
  line-height:28rpx;
}
.page-item .price{
  left: 40rpx;
}
.page-item .count{
  right: 40rpx;
}
