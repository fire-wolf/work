page{
  background: #F1F3F5;
}
.error-tip{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  background: #E64340;
  z-index: 4;
}
.container{
  padding: 40rpx;
}
.input-code{
  width: 100%;
  height: 100rpx;
  margin: 130rpx auto 80rpx;
  /* background: url('//file.niannian99.cn/niannianyun/wx/write/1.1/icon-right.png') no-repeat right center; */
  background-size: 15rpx 25.7rpx;
  border-bottom: 1rpx solid #CED4DA;
}
.input-code input{
  display: block;
  height: 100%;
  font-size:32rpx;
  color:#212529;
  line-height:44rpx;
}

.btn-save{
  width: 100%;
  height: 94rpx;
  font-size:36rpx;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  background: #329AF0;
  border-radius:10rpx;
}